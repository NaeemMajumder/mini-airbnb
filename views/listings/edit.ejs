<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h3 class="mt-5">Edit your Listing</h3>

    <form method="POST" action="/listing/<%= list._id %>?_method=PUT">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" class="form-control" name="listing[title]" value="<%= list.title %>">
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="description" class="form-control" ><%= list.description %></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="text" id="image" class="form-control" name="listing[image]" value="<%= list.image %>">
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" id="price" class="form-control" name="listing[price]" value="<%= list.price %>">
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" id="location" class="form-control" name="listing[location]" value="<%= list.location %>">
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" id="country" class="form-control" name="listing[country]" value="<%= list.country %>">
        </div>

        <br><br>
        
        <button class="btn btn-primary mb-5">Update</button>
    </form>
</body>
