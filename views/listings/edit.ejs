<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h3 class="mt-5">Edit your Listing</h3>

    <form method="POST" action="/listing/<%= list._id %>?_method=PUT" novalidate class="needs-validation">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" class="form-control" name="listing[title]" value="<%= list.title %>" required>
            <div class="valid-feedback">It looks good!</div>
            <div class="invalid-feedback">Title Should be valid</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="description" class="form-control" required ><%= list.description %></textarea>
            <div class="valid-feedback">It looks good!</div>
            <div class="invalid-feedback">Description Should be needed</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="text" id="image" class="form-control" name="listing[image]" value="<%= list.image %>" required>
            <div class="valid-feedback">It looks good!</div>
            <div class="invalid-feedback">Image Should be valid</div>
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" id="price" class="form-control" name="listing[price]" value="<%= list.price %>" required>
            <div class="valid-feedback">It looks good!</div>
            <div class="invalid-feedback">Price Should be valid</div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" id="location" class="form-control" name="listing[location]" value="<%= list.location %>" required>
            <div class="valid-feedback">It looks good!</div>
            <div class="invalid-feedback">Location Should be valid</div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" id="country" class="form-control" name="listing[country]" value="<%= list.country %>" required>
            <div class="valid-feedback">It looks good!</div>
            <div class="invalid-feedback">Country Should be valid</div>
        </div>

        <br><br>
        
        <button class="btn btn-primary mb-5">Update</button>
    </form>
</body>
