<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-5 mb-5">
        <div class="col-8 offset-2">

            <h3>Listing Data</h3>

            <div class="card">
                <img src="<%= list.image %>" class="card-img-top" alt="listing image">
                <div class="card-body">
                <p class="card-text">
                    <b><%= list.title  %></b> <br>
                    <%= list.description  %> <br>
                    &#2547; <%= list.price.toLocaleString("en-BD")  %> <br>
                    <%= list.location  %> <br>
                    <%= list.country  %> 
                </p>
                </div>
            </div>

            <a class="btn btn-primary mt-3" href="/listing/<%= list._id  %>/edit">Edit</a>

            <br>
            <br>

            <form method="post" action="/listing/<%= list.id %>?_method=DELETE">
                <button class="btn btn-dark">Delete</button> 
            </form>

        </div>
    </div>
    
    
</body>
