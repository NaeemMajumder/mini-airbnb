<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-5 mb-5">
        <div class="col-8 offset-2">

            <h3><%= list.title  %></h3>

            <div class="card listing-card">
                <img src="<%= list.image %>" class="card-img-top" alt="listing image">
                <div class="card-body">
                <p class="card-text">
                    <%= list.description  %> <br>
                    &#2547; <%= list.price.toLocaleString("en-BD")  %> <br>
                    <%= list.location  %> <br>
                    <%= list.country  %> 
                </p>
                </div>
            </div>

            <a class="btn btn-primary mt-3" href="/listing/<%= list._id  %>/edit">Edit</a>

            <br>
            <br>

            <form method="post" action="/listing/<%= list.id %>?_method=DELETE">
                <button class="btn btn-dark">Delete</button> 
            </form>

        </div>
    </div>

    <hr>

    <div class="col-8 offset-2 mb-5">
        <h4>Leave a Review</h4>

        <form action="/listing/<%= list.id %>/reviews" method="POST" novalidate class="needs-validation">
            <div>
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>
            <div>
                <label for="comment" class="form-label">Comments</label>
                <br>
                <textarea name="review[comment]" id="comment" cols="30" rows="10" class="form-control" placeholder="Give your review" required></textarea>
                <div class="valid-feedback">It looks good!</div>
                <div class="invalid-feedback">Review Should be valid</div>
            </div>
            <button class="mt-3 btn btn-outline-dark">Submit</button>
        </form>

    </div>

    <hr>

    <div class="col-8 offset-2 mb-5 row">

        <h4 class="mb-5">All Reviews</h4>

        <% for(review of list.reviews) {%>
            <div class="card col-5 ms-5 mb-3">
                <h5 class="card-title">Name</h5>
                <p class="card-text"><%= review.comment %></p>
                <p class="card-text"><%= review.rating %> stars</p>

                <form action="/listing/<%= list._id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-dark mb-3">Delete</button>
                </form>
            </div>
        <% } %>

    </div>
    
    
</body>
